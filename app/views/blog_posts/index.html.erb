<h1>My blog</h1>
<% @blog_posts.each do |blog_post| %>
    <div>
        <% if blog_post.draft? %>
            <h3 style="color:red;">Draft:</h3>
        <% elsif blog_post.scheduled? %>
            <h3 style="color:Blue;">Scheduled for: <%= blog_post.published_at %></h3>
        <% end %>
        <h2><%= link_to blog_post.title, blog_post %></h2>
        <%= blog_post.body %> <br/><br/>
    </div>
<% end %>